<%= semantic_form_for(@estimate) do |f| %>
  <%= f.semantic_fields_for :client do |client| %>
    <%= client.inputs :names, :last_name1, :last_name2, :gender, :maiden_name, :title, :name => "Basic" %>
    <%= client.inputs :address, :phone1, :phone2, :email, :name => "Address" %>  
    <%= client.inputs :date_of_birth, :spouse_date_of_birth, :dependents, :name => "Familia" %>
  <% end %>
  <%= f.inputs do %>
    <%= f.input :coverage, :as => :select, :input_html => { :include_blank => false }, :collection => Coverage.where( :program_id => @program ) %>
    <%= f.input :policyholder_amount, :as => :select, :collection => CoverageAmount.where( :product_id => @estimate.product ) %>
    <%= f.input :spouse_amount, :as => :select, :collection => CoverageAmount.where( :product_id => @estimate.product ) %>
    <%= f.input :dental %>
    <%= f.input :severe_illness %>
  <% end %>
  <%= hidden_field_tag :program, @program.name %>

  <%= f.buttons %>

<% end %>
