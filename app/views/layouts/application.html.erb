<!DOCTYPE html>
<html>
<head>
  <title>Cotizaciones Tecniseguros</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="flash">
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>
</div>
<div id="user_nav">
  <% if logged_in? %>
    Bienvenido(a) <%= current_user.name %>! | <%= link_to "salir", logout_path %>
  <% else %>
    <%= link_to "Acceder", login_path %>
  <% end %>
</div>
<%= yield %>

</body>
</html>
